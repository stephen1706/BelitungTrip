<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/image_view_hotel_image"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:background="@color/primary"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="sans-serif-regular"
                android:textSize="15dp"
                android:textColor="@color/textRowListTitle"
                android:text="Hotel Ibis Slipi Petamburan" />
            <TextView
                android:id="@+id/text_view_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_hotel_name"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:fontFamily="sans-serif-regular"
                android:textSize="12dp"
                android:textColor="@color/textRowListSubtitle"
                android:text="900m dari Bawah Jembatan" />
            <RatingBar
                android:id="@+id/star_bar_hotel_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_region"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="5dp"
                android:rating="5"/>
            <TextView
                android:id="@+id/text_view_hotel_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/star_bar_hotel_list"
                android:layout_marginTop="2dp"
                android:text="Rating 80/100"
                android:textSize="12dp"
                android:textColor="@color/textRowListRating"/>
            <View
                android:id="@+id/line_hotel_list"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_hotel_list"
                android:layout_below="@id/text_view_hotel_rating"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/text_view_hotel_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_hotel_list"
                android:text="Rp 225.000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/textRowListPrice"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>