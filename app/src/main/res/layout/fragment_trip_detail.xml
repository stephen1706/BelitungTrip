<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRIP RESULT"
            android:textSize="20dp"
            android:textColor="@color/pink"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/frame_trip_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOTEL"
            android:textSize="18dp"
            android:textColor="@color/primary"/>
        <LinearLayout
            android:id="@+id/frame_hotel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Souvenir Shop Recommendation"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textColor="@color/primary"/>
        <LinearLayout
            android:id="@+id/frame_souvenir_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transportation Used"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textColor="@color/primary"/>
        <LinearLayout
            android:id="@+id/frame_transportation_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
