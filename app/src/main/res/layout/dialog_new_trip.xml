<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:background="@color/primary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="New Trip"/>
            <ImageView
                android:id="@+id/image_view_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_message_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Please insert your journey duration and budget"
                android:textColor="@color/primary"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Journey Duration"
                android:textColor="@color/pink"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_text_total_night"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Insert your journey duration here"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="#e1e1e1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point of Interest Budget"
                android:textColor="@color/primary"/>
            <Spinner
                android:id="@+id/spinner_poi_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
            </Spinner>
            <!--<EditText-->
                <!--android:id="@+id/edit_text_poi_budget"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:hint="Insert your point of interest budget"-->
                <!--android:inputType="number"-->
                <!--android:textColor="@color/black"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Budget"
                android:textColor="@color/primary"/>

            <Spinner
                android:id="@+id/spinner_restaurant_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>
            <!--<EditText-->
                <!--android:id="@+id/edit_text_restaurant_budget"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:hint="Please insert your culinary budget here"-->
                <!--android:inputType="number"-->
                <!--android:textColor="@color/black" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Budget"
                android:textColor="@color/primary"/>

            <Spinner
                android:id="@+id/spinner_hotel_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <!--<EditText-->
                <!--android:id="@+id/edit_text_hotel_budget"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:hint="Please insert your hotel budget here"-->
                <!--android:inputType="number"-->
                <!--android:textColor="@color/black" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Continue"
                    android:textColor="@color/pink"
                    android:background="#ffc700"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>